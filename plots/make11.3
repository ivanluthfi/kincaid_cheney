set term postscript         # redirect output to postscript
set output 'fig11-3.out'  # name postscript output file

set xlabel "X  SCALE"
set ylabel "Y  SCALE"
set xrange [-2.0:2.0]
set yrange [-1.0:1.0]

set parametric
set dummy t
set trange [0.0:2.*pi]

set size 1., .68

set noxzeroaxis 
set noyzeroaxis 

set nokey                  # use no title (usually written upp right corner)


plot 2.*cos(t), sin(t) with lines 2 1,  "fig11-3.dat" with points 1 1

clear                      # clear current definitions (optional)

