# Solving a BVP
#
ode  := (D@@2)(x)(t) = -x(t);
soln :=dsolve(ode, x(t));
subs(t=0, ");
evalf(");
subs(x(0)=1,");
subs(t=Pi/2, soln);
evalf(");
subs(x(Pi/2)=-3,");
evalf(soln);